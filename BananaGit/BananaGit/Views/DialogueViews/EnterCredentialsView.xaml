<Window
    x:Class="BananaGit.Views.EnterCredentialsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BananaGit.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:BananaGit.ViewModels"
    Title="EnterCredentialsView"
    Width="400"
    Height="300"
    d:DataContext="{d:DesignInstance Type=viewmodels:EnterCredentialsViewModel}"
    Background="#FFEA78"
    Closing="Window_Closing"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label
            HorizontalAlignment="Center"
            Content="Enter Github info"
            FontWeight="Bold"
            />


        <StackPanel Grid.Row="1">


            <Label HorizontalAlignment="Center" Content="Username" />
            <TextBox
                Grid.Row="1"
                Width="100"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Black"
                Foreground="White"
                Text="{Binding Username}"
                />
            <Label HorizontalAlignment="Center" Content="Email" />
            <TextBox
                Grid.Row="1"
                Width="100"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Black"
                Foreground="White"
                Text="{Binding Email}"
                />
            <Label HorizontalAlignment="Center" Content="Personal Token" />
            <TextBox
                Grid.Row="1"
                Width="100"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Black"
                Foreground="White"
                Text="{Binding UserToken}"
                />
        </StackPanel>

        <Button
            Grid.Row="2"
            Width="50"
            Height="25"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            Command="{Binding UpdateCredentialsCommand}"
            Content="Confirm"
            />
    </Grid>
</Window>
