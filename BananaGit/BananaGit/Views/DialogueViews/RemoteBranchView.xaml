<Window
    x:Class="BananaGit.Views.DialogueViews.RemoteBranchView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BananaGit.Views.DialogueViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:BananaGit.ViewModels"
    Title="RemoteBranchView"
    Width="400"
    Height="300"
    d:DataContext="{d:DesignInstance Type=viewmodels:GitInfoViewModel}"
    Background="{StaticResource BananaYellow}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d"
    >
    <Grid>
        <ItemsControl
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            ItemsSource="{Binding RemoteBranches}"
            >
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Button Command="{Binding CheckoutBranchCommand}" Content="+" />
                        <Button Command="{Binding RemoveRemoteBranchCommand}" Content="-" />
                        <Label Content="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
