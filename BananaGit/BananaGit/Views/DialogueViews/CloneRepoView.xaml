<Window
    x:Class="BananaGit.Views.CloneRepoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BananaGit.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:BananaGit.ViewModels"
    Title="CloneRepoView"
    Width="300"
    Height="300"
    d:DataContext="{d:DesignInstance Type=viewmodels:GitInfoViewModel}"
    Background="#FFEA78"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d"
    >
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <ContentControl Content="{Binding}">
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Setter Property="ContentTemplate" Value="{StaticResource CloneRepoTemplate}" />

                        <Style.Triggers>
                            <DataTrigger Binding="{Binding DirectoryHasFiles}" Value="True">
                                <Setter Property="ContentTemplate" Value="{StaticResource DirectoryNotEmptyTemplate}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
            <Button
                Padding="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="CloseWindow_Click"
                Command="{Binding CloneRepoCommand}"
                Content="Clone"
                IsEnabled="{Binding CanClone}"
                />
        </StackPanel>

    </Grid>
</Window>
