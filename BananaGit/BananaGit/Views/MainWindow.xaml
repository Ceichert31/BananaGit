<Window
    x:Class="BananaGit.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BananaGit.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:BananaGit.ViewModels"
    xmlns:views="clr-namespace:BananaGit.Views"
    Title="MainWindow"
    Width="1000"
    Height="500"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
    Background="#FFEA78"
    mc:Ignorable="d"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="1.5*" />
        </Grid.ColumnDefinitions>

        <!--  Tool bar  -->
        <ContentControl
            x:Name="ToolbarContent"
            Grid.Row="0"
            Grid.ColumnSpan="4"
            Content="{Binding ToolbarView}"
            />

        <!--  Git Changes  -->
        <ContentControl
            x:Name="GitChangesContent"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="3"
            Content="{Binding GitChangesView}"
            />

        <!--  Git Commit  -->
        <ContentControl
            x:Name="GitCommitContent"
            Grid.Row="3"
            Grid.Column="3"
            Content="{Binding CommitView}"
            />

        <!--  Commit History  -->
        <ContentControl
            x:Name="CommitHistoryContent"
            Grid.Row="1"
            Grid.RowSpan="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Content="{Binding CommitHistoryView}"
            />

        <!--  Render first to avoid overlap  -->
        <Image
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="-10,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsHitTestVisible="False"
            Opacity="0.2"
            Source="../Assets/Banana.png"
            />

        <GridSplitter
            Grid.Row="1"
            Grid.RowSpan="3"
            Grid.Column="2"
            Width="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            />
    </Grid>
</Window>
