<Window
    x:Class="BananaGit.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BananaGit.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:BananaGit.ViewModels"
    xmlns:views="clr-namespace:BananaGit.Views"
    Title="MainWindow"
    Width="1000"
    Height="500"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
    Background="#FFEA78"
    mc:Ignorable="d"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="1.5*" />
        </Grid.ColumnDefinitions>

        <!--  Tool bar  -->
        <local:ToolbarView
            Grid.Row="0"
            Grid.ColumnSpan="4"
            DataContext="{Binding GitInfoViewModel}"
            />

        <!--  Git Changes  -->
        <local:GitChangesView
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="3"
            DataContext="{Binding GitInfoViewModel}"
            />

        <!--  Git Commit  -->
        <local:CommitView
            Grid.Row="3"
            Grid.Column="3"
            DataContext="{Binding GitInfoViewModel}"
            />

        <!--  Commit History & Tutorial  -->
        <ContentControl
            Grid.Row="1"
            Grid.RowSpan="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Content="{Binding}"
            >
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="ContentTemplate" Value="{StaticResource CommitHistoryTemplate}" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding GitInfoViewModel.IsTutorialOpen}" Value="True">
                            <Setter Property="ContentTemplate" Value="{StaticResource TutorialTemplate}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>

        <!--  Render first to avoid overlap  -->
        <Image
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="-10,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsHitTestVisible="False"
            Opacity="0.2"
            Source="pack://application:,,,/Assets/Banana.png"
            />

        <GridSplitter
            Grid.Row="1"
            Grid.RowSpan="3"
            Grid.Column="2"
            Width="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            />
    </Grid>
</Window>
