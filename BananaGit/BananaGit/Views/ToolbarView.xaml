<UserControl
    x:Class="BananaGit.Views.ToolbarView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BananaGit.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:BananaGit.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:GitInfoViewModel}"
    d:DesignHeight="30"
    d:DesignWidth="800"
    mc:Ignorable="d"
    >
    <Grid>
        <!--  Toolbar  -->
        <ToolBar
            Grid.ColumnSpan="3"
            Margin="-10,0,0,0"
            Background="#FFE245"
            ToolBarTray.IsLocked="True"
            >
            <Image Source="../Assets/Banana.png" />
            <Button
                Command="{Binding OpenSettingsWindowCommand}"
                Content="Settings"
                Foreground="Black"
                />
            <Button
                Command="{Binding OpenTutorialPageCommand}"
                Content="Tutorials"
                Foreground="Black"
                />
            <Button
                Command="{Binding ChooseCloneDirectoryCommand}"
                Content="Open"
                Foreground="Black"
                />
            <Button
                Command="{Binding OpenCloneWindowCommand}"
                Content="Clone"
                Foreground="Black"
                />
            <Button
                Command="{Binding PushFilesCommand}"
                Content="Push"
                Foreground="Black"
                IsEnabled="{Binding HasCommitedFiles}"
                />
            <Button
                Command="{Binding PullChangesCommand}"
                Content="Pull"
                Foreground="Black"
                />
            <ComboBox
                x:Name="BranchList"
                Width="100"
                Padding="-1"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                FontSize="10"
                Foreground="Black"
                IsSynchronizedWithCurrentItem="True"
                ItemsSource="{Binding LocalBranches}"
                SelectedItem="{Binding CurrentBranch}"
                >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="{Binding Name}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <!--  Open remote popup and add remotes as local branches  -->
            <Button
                Command="{Binding OpenRemoteWindowCommand}"
                Content="Remotes"
                Foreground="Black"
                />
        </ToolBar>
    </Grid>
</UserControl>
