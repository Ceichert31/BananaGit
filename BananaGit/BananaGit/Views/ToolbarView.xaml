<UserControl
    x:Class="BananaGit.Views.ToolbarView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BananaGit.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:BananaGit.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:GitInfoViewModel}"
    d:DesignHeight="30"
    d:DesignWidth="800"
    mc:Ignorable="d"
    >
    <Grid>
        <!--  Toolbar  -->
        <ToolBar Grid.ColumnSpan="3" ToolBarTray.IsLocked="True">
            <Image Source="../Assets/Banana.png" />
            <Button Content="Settings" />
            <Button Command="{Binding ChooseCloneDirectoryCommand}" Content="Open" />
            <Button Command="{Binding OpenCloneWindowCommand}" Content="Clone" />
            <Button
                Command="{Binding PushFilesCommand}"
                Content="Push"
                IsEnabled="{Binding HasCommitedFiles}"
                />
            <Button Command="{Binding PullChangesCommand}" Content="Pull" />
            <ComboBox
                x:Name="BranchList"
                Width="100"
                Padding="-1"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                FontSize="10"
                ItemsSource="{Binding LocalBranches}"
                Text="{Binding CurrentBranch, Mode=TwoWay}"
                >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="{Binding FriendlyName}" />
                            <Label Content="{Binding IsRemote}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <!--  Open remote popup and add remotes as local branches  -->
            <Button Command="{Binding OpenRemoteWindowCommand}" Content="Remotes" />
        </ToolBar>
    </Grid>
</UserControl>
