<UserControl
    x:Class="BananaGit.Views.CommitView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BananaGit.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="250"
    d:DesignWidth="400"
    mc:Ignorable="d"
    >
    <Grid>
        <!--  Commit section  -->
        <StackPanel>
            <Label Content="Commit Message" />
            <DockPanel>
                <ComboBox Width="70" Text="{Binding SelectedCommitHeader, Mode=TwoWay}">
                    <ComboBoxItem Content="" IsSelected="true" />
                    <ComboBoxItem Content="feat:" />
                    <ComboBoxItem Content="fix:" />
                    <ComboBoxItem Content="refactor:" />
                    <ComboBoxItem Content="chore:" />
                </ComboBox>
                <TextBox
                    Grid.Row="3"
                    Grid.Column="2"
                    HorizontalAlignment="Stretch"
                    Foreground="Black"
                    Text="{Binding CommitMessage}"
                    />
            </DockPanel>

            <Button
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Command="{Binding CommitStagedFilesCommand}"
                Content="Commit"
                />
            <Button
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                Command="{Binding PushFilesCommand}"
                Content="Push"
                />
        </StackPanel>
    </Grid>
</UserControl>
