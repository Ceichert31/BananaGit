<UserControl
    x:Class="BananaGit.Views.CommitView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BananaGit.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:BananaGit.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:GitInfoViewModel}"
    Background="{StaticResource BananaYellow}"
    d:DesignHeight="250"
    d:DesignWidth="400"
    mc:Ignorable="d"
    >
    <Grid>
        <!--  Commit section  -->
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock
                Background="#debc00"
                FontSize="16"
                FontWeight="Medium"
                Text="Commit Message"
                TextAlignment="Center"
                />
            
            <Label Content="Summary" FontSize="15" />
            <TextBox
                Background="{StaticResource BananaLight}"
                HorizontalAlignment="Stretch"
                VerticalContentAlignment="Center"
                Foreground="Black"
                Text="{Binding CommitMessage}"/>
            
            
            <Label Content="Conventional Commit" FontSize="12" />
            <ComboBox HorizontalAlignment="Left" Width="70" Text="{Binding SelectedCommitHeader, Mode=TwoWay}">
                <ComboBoxItem Content="" IsSelected="true" />
                <ComboBoxItem Content="feat:" />
                <ComboBoxItem Content="fix:" />
                <ComboBoxItem Content="refactor:" />
                <ComboBoxItem Content="chore:" />
                <ComboBoxItem Content="doc:" />
                <ComboBoxItem Content="ci/cd:" />
            </ComboBox>
          
            <StackPanel
                Margin="0,10,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                FlowDirection="RightToLeft"
                Orientation="Horizontal"
                >
                <Button
                    Width="70"
                    Height="25"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Command="{Binding CommitStagedFilesCommand}"
                    Content="Commit"
                    Style="{StaticResource GenericButton}"
                    />
                <Button
                    Width="70"
                    Height="25"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Command="{Binding PushFilesCommand}"
                    Content="Push"
                    IsEnabled="{Binding HasCommitedFiles}"
                    Style="{StaticResource GenericButton}"
                    />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
