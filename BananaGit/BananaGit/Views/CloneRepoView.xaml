<Window
    x:Class="BananaGit.Views.CloneRepoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BananaGit.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:BananaGit.ViewModels"
    Title="CloneRepoView"
    Width="300"
    Height="300"
    d:DataContext="{d:DesignInstance Type=viewmodels:GitInfoViewModel}"
    Background="#FFEA78"
    mc:Ignorable="d"
    >
    <Grid>
        <!--  Clone Section  -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Content="Username" />
                <TextBox
                    Width="150"
                    Foreground="Black"
                    Text="{Binding UsernameInput}"
                    />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Repo URL" />
                <TextBox
                    Width="150"
                    Foreground="Black"
                    Text="{Binding RepoURL}"
                    />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Location" />
                <TextBox
                    Width="100"
                    Foreground="Black"
                    Text="{Binding LocalRepoFilePath}"
                    />
                <Button
                    Padding="3"
                    HorizontalAlignment="Center"
                    Command="{Binding ChooseCloneDirectoryCommand}"
                    Content="Directory"
                    />
            </StackPanel>

            <Button
                Padding="3"
                HorizontalAlignment="Center"
                Command="{Binding CloneRepoCommand}"
                Content="Clone"
                Click="CloseWindow_Click"
                IsEnabled="{Binding CanClone}"
                />
        </StackPanel>
    </Grid>
</Window>
