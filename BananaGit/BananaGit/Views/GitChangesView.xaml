<UserControl
    x:Class="BananaGit.Views.GitChangesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BananaGit.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:BananaGit.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:GitInfoViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="400"
    mc:Ignorable="d"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Repo Status  -->
        <ScrollViewer
            Grid.Row="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            VerticalScrollBarVisibility="Auto"
            >
            <StackPanel Background="Black">
                <Label Content="Unstaged Changes" FontWeight="DemiBold" Background="Black" Foreground="White" />
                <Separator Height="1" Background="White"></Separator>
                <ItemsControl
                    Foreground="White"
                    ItemsSource="{Binding CurrentChanges}"
                >
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{StaticResource FlowerPurple}" BorderThickness="2">
                                <StackPanel Background="{StaticResource BananaYellow}" Orientation="Horizontal">
                                    <Button
                                        Width="20"
                                        HorizontalAlignment="Left"
                                        Background="{StaticResource FlowerPurple}"
                                        Command="{Binding DataContext.StageFileCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding}"
                                        Content="+"
                                        Foreground="White"
                                    />
                                    <Label Content="{Binding Name}" Foreground="Black" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <GridSplitter
            Grid.Row="0"
            Height="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Background="{StaticResource BananaPrimary}"
            IsEnabled="False"
            />

        <Button
            Grid.Row="0"
            Margin="0,0,5,5"
            Padding="3"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Command="{Binding StageFilesCommand}"
            Content="Stage All"
            Style="{StaticResource GenericButton}"
            />

        <ScrollViewer
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            VerticalScrollBarVisibility="Auto"
            >
            <StackPanel Background="Black">
                <Label Content="Unstaged Changes" FontWeight="DemiBold" Background="Black" Foreground="White" />
                <ItemsControl
                    Background="Black"
                    Foreground="White"
                    ItemsSource="{Binding StagedChanges}"
                >
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{StaticResource FlowerPurple}" BorderThickness="2">
                                <StackPanel Background="{StaticResource BananaYellow}" Orientation="Horizontal">
                                    <Button
                                        Width="20"
                                        HorizontalAlignment="Left"
                                        Background="{StaticResource FlowerPurple}"
                                        Command="{Binding DataContext.UnstageFileCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding}"
                                        Content="-"
                                        Foreground="White"
                                    />
                                    <Label Content="{Binding Name}" Foreground="Black" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
