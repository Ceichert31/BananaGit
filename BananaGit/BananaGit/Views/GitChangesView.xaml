<UserControl
    x:Class="BananaGit.Views.GitChangesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BananaGit.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:BananaGit.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:GitInfoViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="400"
    mc:Ignorable="d"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Repo Status  -->
        <ScrollViewer
            Grid.Row="0"
            Grid.Column="3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            VerticalScrollBarVisibility="Auto"
            >
            <ItemsControl
                Background="Black"
                Foreground="White"
                ItemsSource="{Binding CurrentChanges}"
                >
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Background="White" Orientation="Horizontal">
                            <Button
                                HorizontalAlignment="Left"
                                Background="{StaticResource FlowerPurple}"
                                Command="{Binding DataContext.StageFileCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                CommandParameter="{Binding}"
                                Content="+"
                                Foreground="White"
                                />
                            <Label Content="{Binding Name}" Foreground="Black" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <GridSplitter
            Grid.Row="0"
            Grid.Column="3"
            Height="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Background="{StaticResource BananaYellow}"
            />



        <Button
            Grid.Row="0"
            Grid.Column="2"
            Margin="0,0,0,5"
            Padding="3"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Command="{Binding StageFilesCommand}"
            Content="Stage"
            Style="{StaticResource GenericButton}"
            />

        <ScrollViewer
            Grid.Row="2"
            Grid.Column="3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            VerticalScrollBarVisibility="Auto"
            >
            <ItemsControl
                Background="Black"
                Foreground="White"
                ItemsSource="{Binding StagedChanges}"
                >
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Background="White" Orientation="Horizontal">
                            <Button
                                HorizontalAlignment="Left"
                                Background="{StaticResource FlowerPurple}"
                                Command="{Binding DataContext.UnstageFileCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                CommandParameter="{Binding}"
                                Content="-"
                                Foreground="White"
                                />
                            <Label Content="{Binding Name}" Foreground="Black" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
