<Window
    x:Class="BananaGit.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BananaGit"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:BananaGit.ViewModels"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=viewmodels:GitInfoViewModel}"
    Background="#FFEA78"
    mc:Ignorable="d"
    >

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--<ContentControl
            Grid.Row="1"
            Grid.Column="1"
            Content="{Binding}"
            >
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="ContentTemplate" Value="{DynamicResource CloneRepoTemplate}" />
                </Style>
            </ContentControl.Style>
        </ContentControl>-->

        <!--  Push Section  -->
        <StackPanel Grid.Column="1" HorizontalAlignment="Stretch">
            <StackPanel Orientation="Horizontal">
                <Label Content="Username" />
                <TextBox
                    Width="150"
                    Foreground="Black"
                    Text="{Binding UsernameInput}"
                    />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Repo Name" />
                <TextBox
                    Width="150"
                    Foreground="Black"
                    Text="{Binding RepoName}"
                    />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Message" />
                <TextBox
                    Width="150"
                    Foreground="Black"
                    Text="{Binding CommitMessage}"
                    />
            </StackPanel>
            <Button Command="{Binding UpdateCredentialsCommand}" Content="Push" />
        </StackPanel>

        <!--  Clone Section  -->
        <StackPanel Grid.Row="2" Grid.Column="1">
            <StackPanel Orientation="Horizontal">
                <Label Content="Username" />
                <TextBox
                    Width="150"
                    Foreground="Black"
                    Text="{Binding UsernameInput}"
                    />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Repo URL" />
                <TextBox
                    Width="150"
                    Foreground="Black"
                    Text="{Binding RepoURL}"
                    />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Location" />
                <TextBox
                    Width="100"
                    Foreground="Black"
                    Text="{Binding LocalRepoFilePath}"
                    />
                <Button
                    Padding="3"
                    HorizontalAlignment="Center"
                    Command="{Binding ChooseCloneDirectoryCommand}"
                    Content="Directory"
                    />
            </StackPanel>

            <Button
                Padding="3"
                HorizontalAlignment="Center"
                Command="{Binding CloneRepoCommand}"
                Content="Clone"
                IsEnabled="{Binding CanClone}"
                />
        </StackPanel>

        <!--  Repo Status  -->
        <StackPanel Grid.Row="0" Grid.Column="2">

            <ItemsControl
                Height="81"
                HorizontalAlignment="Stretch"
                Background="Black"
                Foreground="White"
                ItemsSource="{Binding CurrentChanges}"
                />
            <Button
                Padding="3"
                HorizontalAlignment="Center"
                Command="{Binding UpdateRepoStatusCommand}"
                Content="Clone"
                IsEnabled="{Binding CanClone}"
                />
            <Button
                Padding="3"
                HorizontalAlignment="Center"
                Command="{Binding StageFilesCommand}"
                Content="Stage"
                IsEnabled="{Binding CanClone}"
                />
        </StackPanel>
        <Button
            Grid.Row="1"
            Grid.Column="2"
            Margin="88,60,88,60"
            Padding="3"
            Command="{Binding CommitStagedFilesCommand}"
            Content="Commit"
            IsEnabled="{Binding CanClone}"
            />
        <Image Grid.ColumnSpan="2" Margin="-136,10,186,72" Grid.RowSpan="2" Source="/Assets/Banana.png" Stretch="Fill"/>


    </Grid>
</Window>
