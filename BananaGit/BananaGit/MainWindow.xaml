<Window
    x:Class="BananaGit.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BananaGit"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:BananaGit.ViewModels"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=viewmodels:GitInfoViewModel}"
    Background="#FFEA78"
    mc:Ignorable="d"
    >

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Toolbar  -->
        <ToolBar Grid.ColumnSpan="3">
            <Image Source="Assets/Banana.png" />
            <Button Command="" Content="Clone" />
            <Button Command="" Content="Push" />
            <Button Command="" Content="Pull" />
        </ToolBar>


        <!--<ContentControl
            Grid.Row="1"
            Grid.Column="1"
            Content="{Binding}"
            >
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="ContentTemplate" Value="{DynamicResource CloneRepoTemplate}" />
                </Style>
            </ContentControl.Style>
        </ContentControl>-->

        <!--  Push Section  -->
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            >
            <StackPanel Orientation="Horizontal">
                <Label Content="Message" />
            </StackPanel>
            <Button Command="{Binding PushFilesCommand}" Content="Push" />
        </StackPanel>

        <!--  Clone Section  -->
        <StackPanel Grid.Row="2" Grid.Column="1">
            <StackPanel Orientation="Horizontal">
                <Label Content="Username" />
                <TextBox
                    Width="150"
                    Foreground="Black"
                    Text="{Binding UsernameInput}"
                    />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Repo URL" />
                <TextBox
                    Width="150"
                    Foreground="Black"
                    Text="{Binding RepoURL}"
                    />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Location" />
                <TextBox
                    Width="100"
                    Foreground="Black"
                    Text="{Binding LocalRepoFilePath}"
                    />
                <Button
                    Padding="3"
                    HorizontalAlignment="Center"
                    Command="{Binding ChooseCloneDirectoryCommand}"
                    Content="Directory"
                    />
            </StackPanel>

            <Button
                Padding="3"
                HorizontalAlignment="Center"
                Command="{Binding CloneRepoCommand}"
                Content="Clone"
                IsEnabled="{Binding CanClone}"
                />
        </StackPanel>

        <!--  Repo Status  -->

        <ItemsControl
            Grid.Row="1"
            Grid.Column="3"
            Height="135"
            HorizontalAlignment="Stretch"
            Background="Black"
            Foreground="White"
            ItemsSource="{Binding CurrentChanges}"
            >
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Button HorizontalAlignment="Left" Content="+" />
                        <Label Content="Placeholder Name" Foreground="Black" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Button
            Grid.Row="1"
            Grid.Column="2"
            Padding="3"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Command="{Binding StageFilesCommand}"
            Content="Stage"
            />

        <ItemsControl
            Grid.Row="2"
            Grid.Column="3"
            Height="135"
            HorizontalAlignment="Stretch"
            Background="Black"
            Foreground="White"
            ItemsSource="{Binding StagedChanges}"
            />
        <Button
            Grid.Row="3"
            Grid.Column="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Command="{Binding CommitStagedFilesCommand}"
            Content="Commit"
            />

        <Image Grid.Row="1" Source="Assets/Banana.png" />

        <StackPanel Grid.Row="3" Grid.Column="3">
            <Label Content="Commit Message" />
            <TextBox
                Grid.Row="3"
                Grid.Column="2"
                Width="200"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Foreground="Black"
                Text="{Binding CommitMessage}"
                />
        </StackPanel>
    </Grid>
</Window>
