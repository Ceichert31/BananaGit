<Window
    x:Class="BananaGit.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BananaGit"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:BananaGit.ViewModels"
    xmlns:views="clr-namespace:BananaGit.Views"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
    Background="#FFEA78"
    mc:Ignorable="d"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="1.5*" />
        </Grid.ColumnDefinitions>

        <!--  Tool bar  -->
        <ContentControl
            x:Name="ToolbarContent"
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Content="{Binding ToolbarView}"
            />

        <!--  Git Changes  -->
        <ContentControl
            x:Name="GitChangesContent"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="3"
            Content="{Binding GitChangesView}"
            />

        <!--  Git Commit  -->
        <ContentControl
            x:Name="GitCommitContent"
            Grid.Row="3"
            Grid.Column="3"
            Content="{Binding CommitView}"
            />

        <!--  Commit History  -->
        <ContentControl
            x:Name="CommitHistoryContent"
            Grid.Row="1"
            Grid.RowSpan="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Content="{Binding CommitHistoryView}"
            />

        <Image
            Grid.Row="1"
            Grid.RowSpan="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="-166,0,0,112"
            HorizontalAlignment="Left"
            Opacity="0.35"
            Source="Assets/Banana.png"
            />
    </Grid>
</Window>
