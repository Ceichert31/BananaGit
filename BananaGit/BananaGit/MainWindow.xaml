<Window
    x:Class="BananaGit.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BananaGit"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:BananaGit.ViewModels"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=viewmodels:GitInfoViewModel}"
    mc:Ignorable="d"
    >

    <Grid>

        <StackPanel Width="100" HorizontalAlignment="Center">
            <TextBox Foreground="Black" Text="{Binding UsernameInput}" />
            <TextBox Foreground="Black" Text="{Binding RepoName}" />

            <Button Command="{Binding UpdateCredentials}" Content="Get Info" />
        </StackPanel>


    </Grid>
</Window>
