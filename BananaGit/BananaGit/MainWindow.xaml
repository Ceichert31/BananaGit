<Window
    x:Class="BananaGit.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BananaGit"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:BananaGit.ViewModels"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=viewmodels:GitInfoViewModel}"
    Background="#FFEA78"
    mc:Ignorable="d"
    >

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="1.5*" />
        </Grid.ColumnDefinitions>

        <!--  Toolbar  -->
        <ToolBar Grid.ColumnSpan="3">
            <Image Source="Assets/Banana.png" />
            <Button Command="{Binding OpenCloneWindowCommand}" Content="Clone" />
            <Button Command="{Binding PushFilesCommand}" Content="Push" />
            <Button Command="{Binding PullChangesCommand}" Content="Pull" />
        </ToolBar>

        <!--  Repo Status  -->
        <ScrollViewer
            Grid.Row="1"
            Grid.Column="3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            VerticalScrollBarVisibility="Auto"
            >
            <ItemsControl
                Background="Black"
                Foreground="White"
                ItemsSource="{Binding CurrentChanges}"
                />
        </ScrollViewer>

        <GridSplitter
            Grid.Row="1"
            Grid.Column="3"
            Height="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            />

        <!--  <ItemsControl.ItemTemplate>
     <DataTemplate>
         <StackPanel Orientation="Horizontal">
             <Button HorizontalAlignment="Left" Content="+" />
             <Label Content="Placeholder Name" Foreground="Black" />
         </StackPanel>
     </DataTemplate>
 </ItemsControl.ItemTemplate>-->

        <Button
            Grid.Row="1"
            Grid.Column="2"
            Padding="3"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Command="{Binding StageFilesCommand}"
            Content="Stage"
            />

        <ScrollViewer
            Grid.Row="2"
            Grid.Column="3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            VerticalScrollBarVisibility="Auto"
            >
            <ItemsControl
                Background="Black"
                Foreground="White"
                ItemsSource="{Binding StagedChanges}"
                />
        </ScrollViewer>

        <Image Grid.Row="1" Source="Assets/Banana.png" />
        <StackPanel Grid.Row="3" Grid.Column="3">
            <Label Content="Commit Message" />

            <DockPanel>
                <ComboBox Width="70" Text="{Binding SelectedCommitHeader, Mode=TwoWay}">
                    <ComboBoxItem Content="feat:" />
                    <ComboBoxItem Content="fix:" />
                    <ComboBoxItem Content="refactor:" />
                    <ComboBoxItem Content="chore:" />
                </ComboBox>
                <TextBox
                    Grid.Row="3"
                    Grid.Column="2"
                    HorizontalAlignment="Stretch"
                    Foreground="Black"
                    Text="{Binding CommitMessage}"
                    />
            </DockPanel>

            <Button
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Command="{Binding CommitStagedFilesCommand}"
                Content="Commit"
                />
            <Button
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                Command="{Binding PushFilesCommand}"
                Content="Push"
                />
        </StackPanel>
    </Grid>
</Window>
