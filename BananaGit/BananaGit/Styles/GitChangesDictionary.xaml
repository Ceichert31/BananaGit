<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="GitChangesButton" TargetType="Button">
        <Setter Property="Width" Value="20" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Background" Value="{StaticResource BananaDark}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="CommandParameter" Value="{Binding}" />
    </Style>

    <Style x:Key="GitChangesStackPanel" TargetType="StackPanel">
        <Setter Property="Background" Value="{StaticResource BananaGradient}" />
        <Setter Property="Orientation" Value="Horizontal" />
    </Style>
</ResourceDictionary>