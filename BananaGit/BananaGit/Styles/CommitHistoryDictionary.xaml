<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="GitBananaIconStyle" TargetType="Image">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsMergeCommit}" Value="True">
                <Setter Property="Source" Value="pack://application:,,,/Assets/BananaMerge.png"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding IsMergeCommit}" Value="False">
                <Setter Property="Source" Value="pack://application:,,,/Assets/BananaCurrent.png"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>