<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <DataTemplate x:Key="CloneRepoTemplate">
        <!--  Clone Section  -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Content="Repo URL" />
                <TextBox
                    Width="150"
                    Foreground="Black"
                    Text="{Binding DataContext.RepositoryUrl, RelativeSource={RelativeSource AncestorType=Window}}"
                    />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Location" />
                <TextBox
                    Width="100"
                    Foreground="Black"
                    Text="{Binding DataContext.RepositoryPath, RelativeSource={RelativeSource AncestorType=Window}}"
                    />
                <Button
                    Padding="3"
                    HorizontalAlignment="Center"
                    Command="{Binding DataContext.CallRepositoryDialogCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                    Content="Directory"
                    />
            </StackPanel>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="DirectoryNotEmptyTemplate">
        <!--  Clone Section  -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Content="Repo URL" />
                <TextBox
                    Width="150"
                    Foreground="Black"
                    Text="{Binding RepositoryUrl}"
                    />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Location" />
                <TextBox
                    Width="100"
                    Foreground="Black"
                    Text="{Binding RepositoryPath}"
                    />
                <Button
                    Padding="3"
                    HorizontalAlignment="Center"
                    Command="{Binding DataContext.CallRepositoryDialogCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                    Content="Directory"
                    />
            </StackPanel>

            <Label HorizontalAlignment="Center" Content="Selected Directory is not empty!" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>